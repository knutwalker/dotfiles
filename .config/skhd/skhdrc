# Change focus window with Ctrl+Alt+HJKL
ctrl + alt - h : yabai -m window --focus west || yabai -m display --focus west
ctrl + alt - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + alt - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + alt - l : yabai -m window --focus east || yabai -m display --focus east
ctrl + alt - 0x32 : yabai -m window --focus recent

# Cycle through windows with Ctrl+Alt+NP
ctrl + alt - n : yabai -m window --focus prev || yabai -m window --focus last
ctrl + alt - p : yabai -m window --focus next || yabai -m window --focus first

# Flip layout y-axis with Ctrl+Alt+|
ctrl + alt - 0x2A : yabai -m space --mirror y-axis

# Flip layout x-axis with Ctrl+Alt+_
ctrl + alt - 0x1B : yabai -m space --mirror x-axis

# Rotate layout clockwise with Ctrl+Alt+R
ctrl + alt - r : yabai -m space --rotate 270

# Balance window splits with Ctrl+Alt
ctrl + alt - 0x18 : yabai -m space --balance

# Maximize window with Ctrl+Alt+M
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# Minimize window with Ctrl+Alt+B
ctrl + alt - b : yabai -m window --minimize

# Toggle floating window with Ctrl+Alt+T
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Move focus across display with Ctrl+Alt+Up/Down or Shift+Ctrl+HL
ctrl + alt   - down : yabai -m display --focus prev || yabai -m display --focus last
ctrl + alt   - up   : yabai -m display --focus next || yabai -m display --focus first
ctrl + shift - h    : yabai -m display --focus prev || yabai -m display --focus prev
ctrl + shift - l    : yabai -m display --focus next || yabai -m display --focus first

# Swap windows with Ctrl+Shift+Alt+HJKL
ctrl + shift + alt - h : yabai -m window --swap west || (yabai -m window --display west && yabai -m display --focus west)
ctrl + shift + alt - j : yabai -m window --swap south || (yabai -m window --display south && yabai -m display --focus south)
ctrl + shift + alt - k : yabai -m window --swap north || (yabai -m window --display north && yabai -m display --focus north)
ctrl + shift + alt - l : yabai -m window --swap east || (yabai -m window --display east && yabai -m display --focus east)

# Warp windows with Ctrl+Cmd+Alt+HJKL
ctrl + cmd + alt - h : yabai -m window --warp west
ctrl + cmd + alt - j : yabai -m window --warp south
ctrl + cmd + alt - k : yabai -m window --warp north
ctrl + cmd + alt - l : yabai -m window --warp east

# Move windows to spaces with Ctrl+Shift+Alt+NP
ctrl + shift + alt - n : (yabai -m window --space next || yabai -m window --space first) && yabai -m window --focus recent
ctrl + shift + alt - p : (yabai -m window --space prev || yabai -m window --space last) &&  yabai -m window --focus recent

# Move windows to specfic space # with Cttrl+Shift+Alt+1-9
ctrl + shift + alt - 0x12 : yabai -m window --space 1
ctrl + shift + alt - 0x13 : yabai -m window --space 2
ctrl + shift + alt - 0x14 : yabai -m window --space 3
ctrl + shift + alt - 0x15 : yabai -m window --space 4
ctrl + shift + alt - 0x17 : yabai -m window --space 5
ctrl + shift + alt - 0x16 : yabai -m window --space 6
ctrl + shift + alt - 0x1A : yabai -m window --space 7
ctrl + shift + alt - 0x1C : yabai -m window --space 8
ctrl + shift + alt - 0x19 : yabai -m window --space 9
