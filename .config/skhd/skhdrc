# Change focus window with Ctrl+Alt+HJKL
ctrl + alt - h : yabai -m window --focus west || yabai -m display --focus west
ctrl + alt - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + alt - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + alt - l : yabai -m window --focus east || yabai -m display --focus east
ctrl + alt - 0x32 : yabai -m window --focus recent

# Cycle through windows with Ctrl+Alt+NP
ctrl + alt - n : yabai -m window --focus prev || yabai -m window --focus last
ctrl + alt - p : yabai -m window --focus next || yabai -m window --focus first

# Flip layout y-axis with Ctrl+Alt+|
ctrl + alt - 0x2A : yabai -m space --mirror y-axis

# Flip layout x-axis with Ctrl+Alt+_
ctrl + alt - 0x1B : yabai -m space --mirror x-axis

# Rotate layout clockwise with Ctrl+Alt+R
ctrl + alt - r : yabai -m space --rotate 270

# Balance window splits with Ctrl+Alt+=
ctrl + alt - 0x18 : yabai -m space --balance

# Maximize window with Ctrl+Alt+M
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# Toggle floating window with Ctrl+Alt+T
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Swap windows with Shift+Alt+HJKL
shift + alt - h : yabai -m window --swap west || (yabai -m window --display west && yabai -m display --focus west)
shift + alt - j : yabai -m window --swap south || (yabai -m window --display south && yabai -m display --focus south)
shift + alt - k : yabai -m window --swap north || (yabai -m window --display north && yabai -m display --focus north)
shift + alt - l : yabai -m window --swap east || (yabai -m window --display east && yabai -m display --focus east)

# Warp windows with Cmd+Shift+Alt+HJKL
cmd + shift + alt - h : yabai -m window --warp west
cmd + shift + alt - j : yabai -m window --warp south
cmd + shift + alt - k : yabai -m window --warp north
cmd + shift + alt - l : yabai -m window --warp east

# Move windows to spaces with Shift+Alt+NP
shift + alt - n : yabai -m window --space next || yabai -m window --space first
shift + alt - p : yabai -m window --space prev || yabai -m window --space last

# Move windows to specfic space # with Shift+Alt+1-9
shift + alt - 0x12 : yabai -m window --space 1
shift + alt - 0x13 : yabai -m window --space 2
shift + alt - 0x14 : yabai -m window --space 3
shift + alt - 0x15 : yabai -m window --space 4
shift + alt - 0x17 : yabai -m window --space 5
shift + alt - 0x16 : yabai -m window --space 6
shift + alt - 0x1A : yabai -m window --space 7
shift + alt - 0x1C : yabai -m window --space 8
shift + alt - 0x19 : yabai -m window --space 9

