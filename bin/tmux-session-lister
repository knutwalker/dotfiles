#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$(tmux ls | cut -d: -f1 | fzf --query="$1" --select-1)
else
    selected=$(tmux ls | cut -d: -f1 | fzf --select-1)
fi

if [[ -z $selected ]]; then
    exit 0
fi

if [[ -z $TMUX ]]; then

    tmux attach -t "=$selected"

else
    
    tmux switch-client -t "=$selected"

fi

