#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$(find ~/dev/rust ~/dev/neo ~/dev/tmp ~/dev -mindepth 1 -maxdepth 1 -type d | fzf --query="$1" --select-1)
else
    selected=$(find ~/dev/rust ~/dev/neo ~/dev/tmp ~/dev -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if [[ -z $TMUX ]]; then

    if tmux has-session -t "$selected_name" 2>/dev/null; then
        tmux attach -t "$selected_name"
    else
        tmux new-session -s "$selected_name" -c "$selected"
    fi

else
    
    if ! tmux has-session -t "$selected_name" 2>/dev/null; then
        tmux new-session -ds "$selected_name" -c "$selected"
    fi
    tmux switch-client -t "$selected_name"

fi

